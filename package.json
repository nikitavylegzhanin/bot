{
  "name": "trvekvlt-api",
  "main": "build/index.js",
  "scripts": {
    "build": "rm -rf ./build && tsc",
    "start": "node -r dotenv/config ./build",
    "dev": "npm run build && npm run start",
    "test": "jest"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.6.1",
    "@tinkoff/invest-js": "^1.0.3",
    "apollo-server": "3.10.3",
    "ramda": "^0.28.0",
    "telegraf": "^4.7.0",
    "type-graphql": "^1.2.0-rc.1",
    "typeorm": "^0.3.6"
  },
  "devDependencies": {
    "@types/jest": "29.1.2",
    "@types/node": "16.11.65",
    "@types/ramda": "0.28.16",
    "dotenv": "16.0.3",
    "jest": "29.2.0",
    "pg": "8.8.0",
    "ts-jest": "29.0.3",
    "typescript": "4.8.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFiles": [
      "dotenv/config"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "packageRules": [
      {
        "matchUpdateTypes": [
          "minor",
          "patch",
          "pin",
          "digest"
        ],
        "automerge": true
      }
    ]
  }
}
